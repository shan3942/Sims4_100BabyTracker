@model Sims4_100BabyTracker.Models.Matriarch

@{
    ViewBag.Title = "Add Next Matriarch";
}

<div class="d-flex justify-content-between mb-3">
    <h2>@ViewBag.Title</h2>
    @Html.ActionLink("Back to List", "Index")
</div>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-2" })
            <div class="col-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-2">
                <input type="submit" value="Add Matriarch" class="btn create" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
