<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Shannon Johnson" />
    <meta name="description" content="App to keep track of babies, mothers, bladder failures, and energy failures in the Sims 4 100 Baby Challenge" />
    <meta name="application-name" content="Sims 4 100 Baby Tracker" />
    <title>@ViewBag.Title | Sims 4 100 Baby Tracker</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="shadow-sm mb-4">
        <nav class="container navbar navbar-expand-md d-flex justify-content-between">
            <div class="navbar-brand">Sims 4 100 Baby Tracker</div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarLinks" aria-controls="navbarLinks" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarLinks">
                <ul class="navbar-nav navbar-brand ml-auto">
                    <li>@Html.ActionLink("Summary", "Summary", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Matriarchs", "Index", "Matriarchs", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Children", "Index", "Children", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="footer shadow-sm fixed-bottom py-3">
        <div class="container text-center ">
            <hr />
            <span class="text-muted">&copy; @DateTime.Now.Year | Sims 4 100 Baby Tracker | Authored by Shannon Johnson</span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
